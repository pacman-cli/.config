# Import a color scheme
# include ~/.config/kitty/themes/coolnight.conf
# include ~/.config/kitty/kitty-themes/themes/Alucard.conf
# include ~/.config/kitty/catppuccin/diff-macchiato.conf
include ~/.config/kitty/catppuccin/themes/coolnight.conf
# include ./theme.conf
# Font settings
# Explicitly set font directories
# font_directories /Users/puspo/Library/Fonts
font_family DankMono Nerd Font
# font-family  DankMono 
# Try using the exact font file with its full path
# font_family /Users/puspo/Library/Fonts/DankMono-Regular.otf
# font_family /Users/puspo/Library/Fonts/Dank Mono Italic Nerd Font Complete.ttf
# If the above doesn't work, try these alternatives:
# font_family /Users/puspo/Library/Fonts/Dank Mono Regular Nerd Font Complete.ttf
#---------------------------------------------
# Font settings
# Explicitly set font directories
# font_directories ~/Library/Fonts

# Try using the exact font file with its full path
# font_family ~/Library/Fonts/DankMono-Regular.otf

# If the above doesn't work, try these alternatives:
# font_family ~/Library/Fonts/Dank\ Mono\ Regular\ Nerd\ Font\ Complete.ttf
# font_family Menlo
# font_family CaskaydiaCove Nerd Font Mono
# font_family MesloLGS Nerd Font Mono

font_size 21.0

# Ligatures - using the correct syntax
disable_ligatures never

# Cursor configuration
cursor_trail 3
cursor none

# Window styling
# background_opacity 0.5
# blur_background yes
# blur_background_radius 20  # Increase for stronger blur (default is ~3-5)

# Window padding
window_padding_width 10

# Remove window decorations
hide_window_decorations yes

# Keyboard behavior
macos_option_as_alt both

# Set term variable
term xterm-256color

# Bold text rendering
#bold_text_brightens_colors yes

# Fallback symbol map for nerd font icons
symbol_map U+e000-U+e00a,U+ea60-U+ebeb,U+e0a0-U+e0c8,U+e0ca,U+e0cc-U+e0d7,U+e200-U+e2a9,U+e300-U+e3e3,U+e5fa-U+e6b1,U+e700-U+e7c5,U+ed00-U+efc1,U+f000-U+f2ff,U+f000-U+f2e0,U+f300-U+f372,U+f400-U+f533,U+f0001-U+f1af0 Symbols Nerd Font Mono
